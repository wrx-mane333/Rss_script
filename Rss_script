-- ULTIMATE GOALKEEPER DEFENSE (BRUTE FORCE EDITION)
-- –ú–∞–∫—Å–∏–º–∞–ª—å–Ω–∞—è –∞–≥—Ä–µ—Å—Å–∏—è –∫ –ª—é–±—ã–º –Ω–µ–∑–∞–∫—Ä–µ–ø–ª–µ–Ω–Ω—ã–º –æ–±—ä–µ–∫—Ç–∞–º
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local lp = Players.LocalPlayer

-- CONFIG
local Config = {
    Radius = 25,             -- –†–∞–¥–∏—É—Å –∑–∞—â–∏—Ç—ã
    Power = 800,             -- –°–∏–ª–∞ —É–¥–∞—Ä–∞ (—á–µ–º –±–æ–ª—å—à–µ, —Ç–µ–º –±—ã—Å—Ç—Ä–µ–µ —É–ª–µ—Ç–∏—Ç)
    UpForce = 100,           -- –ü–æ–¥–±—Ä–∞—Å—ã–≤–∞–Ω–∏–µ –≤–≤–µ—Ä—Ö
    AggressiveMode = true,   -- –ï—Å–ª–∏ True, –æ—Ç—Ç–∞–ª–∫–∏–≤–∞–µ—Ç –í–°–ï –Ω–µ–∑–∞–∫—Ä–µ–ø–ª–µ–Ω–Ω—ã–µ –¥–µ—Ç–∞–ª–∏ (–∫—Ä–æ–º–µ —Ç–µ–±—è)
    Debug = false            -- –ü–∏—Å–∞—Ç—å –≤ –∫–æ–Ω—Å–æ–ª—å, —á—Ç–æ –Ω–∞—à–ª–∏
}

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "ULTIMATE_DEFENSE"
ScreenGui.ResetOnSpawn = false

local Button = Instance.new("TextButton")
Button.Parent = ScreenGui
Button.Size = UDim2.new(0, 150, 0, 50)
Button.Position = UDim2.new(0.5, -75, 0, 10)
Button.Text = "üõ°Ô∏è SHIELD: ON"
Button.BackgroundColor3 = Color3.fromRGB(0, 255, 100)
Button.TextColor3 = Color3.new(0,0,0)
Button.Font = Enum.Font.GothamBold
Button.TextSize = 18
local Corner = Instance.new("UICorner", Button)
Corner.CornerRadius = UDim.new(0, 8)

local Enabled = true
Button.MouseButton1Click:Connect(function()
    Enabled = not Enabled
    Button.Text = Enabled and "üõ°Ô∏è SHIELD: ON" or "üõ°Ô∏è SHIELD: OFF"
    Button.BackgroundColor3 = Enabled and Color3.fromRGB(0, 255, 100) or Color3.fromRGB(255, 50, 50)
end)

-- VISUAL ZONE
local Visual = Instance.new("Part")
Visual.Shape = Enum.PartType.Ball
Visual.Material = Enum.Material.ForceField
Visual.CanCollide = false
Visual.Anchored = true
Visual.CastShadow = false
Visual.Transparency = 0.8
Visual.Color = Color3.fromRGB(255, 0, 0)
Visual.Size = Vector3.new(0,0,0)
Visual.Parent = Workspace

-- –§–ò–õ–¨–¢–†–´ (–ß–¢–û –ù–ï –¢–†–û–ì–ê–¢–¨)
local function IsIgnored(part)
    if not part then return true end
    if part.Anchored then return true end -- –°—Ç–µ–Ω—ã –Ω–µ —Ç—Ä–æ–≥–∞–µ–º
    if part.Mass > 1000 then return true end -- –û–≥—Ä–æ–º–Ω—ã–µ –æ–±—ä–µ–∫—Ç—ã –Ω–µ —Ç—Ä–æ–≥–∞–µ–º
    if part:IsDescendantOf(lp.Character) then return true end -- –°–µ–±—è –Ω–µ —Ç—Ä–æ–≥–∞–µ–º
    return false
end

-- –ü–†–û–í–ï–†–ö–ê –ù–ê –ú–Ø–ß (–ú–ê–ö–°–ò–ú–ê–õ–¨–ù–ê–Ø)
local function IsLikelyBall(part)
    local name = part.Name:lower()
    local parentName = part.Parent.Name:lower()
    
    -- 1. –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ –∏–º–µ–Ω–∏ (—Å–∞–º–∞—è —Ç–æ—á–Ω–∞—è)
    if name:find("ball") or name:find("soccer") or name:find("sport") or name:find("project") or 
       parentName:find("ball") or parentName:find("soccer") then
        return true
    end
    
    -- 2. –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ —Ñ–æ—Ä–º–µ
    if part.Shape == Enum.PartType.Ball or part.Shape == Enum.PartType.Cylinder then
        return true
    end
    
    -- 3. –ü—Ä–æ–≤–µ—Ä–∫–∞ MeshPart (—á–∞—Å—Ç–æ –º—è—á–∏ —ç—Ç–æ –º–µ—à–∏)
    if part:IsA("MeshPart") then
        -- –ï—Å–ª–∏ —ç—Ç–æ –º–µ—à –∏ –æ–Ω –º–∞–ª–µ–Ω—å–∫–∏–π, —Å–∫–æ—Ä–µ–µ –≤—Å–µ–≥–æ –º—è—á
        if part.Size.Magnitude < 6 then 
            return true 
        end
    end

    -- 4. –ê–ì–†–ï–°–°–ò–í–ù–´–ô –†–ï–ñ–ò–ú: –ï—Å–ª–∏ –¥–µ—Ç–∞–ª—å –º–∞–ª–µ–Ω—å–∫–∞—è –∏ –ø–æ–¥–≤–∏–∂–Ω–∞—è - –ë–ï–ô –ï–Å
    if Config.AggressiveMode then
        if part.Size.Magnitude < 8 then -- –õ—é–±–æ–π –æ–±—ä–µ–∫—Ç –º–µ–Ω—å—à–µ 8 —Å—Ç–∞–¥–æ–≤
            return true
        end
    end
    
    return false
end

-- –û–°–ù–û–í–ù–û–ô –¶–ò–ö–õ (Heartbeat –¥–ª—è —Ñ–∏–∑–∏–∫–∏)
RunService.Heartbeat:Connect(function()
    if not lp.Character or not lp.Character:FindFirstChild("HumanoidRootPart") then 
        Visual.Transparency = 1
        return 
    end
    
    local Root = lp.Character.HumanoidRootPart
    
    -- –û–±–Ω–æ–≤–ª—è–µ–º –≤–∏–∑—É–∞–ª
    Visual.CFrame = Root.CFrame
    Visual.Size = Vector3.new(Config.Radius*2, Config.Radius*2, Config.Radius*2)
    Visual.Transparency = Enabled and 0.8 or 1
    
    if not Enabled then return end
    
    -- –ü–û–ò–°–ö –ú–Ø–ß–ê (–í –†–ê–î–ò–£–°–ï)
    local Params = OverlapParams.new()
    Params.FilterDescendantsInstances = {lp.Character, Visual}
    Params.FilterType = Enum.RaycastFilterType.Exclude
    
    local parts = Workspace:GetPartBoundsInRadius(Root.Position, Config.Radius, Params)
    
    for _, part in ipairs(parts) do
        if not IsIgnored(part) and IsLikelyBall(part) then
            
            -- –í–ï–ö–¢–û–† –û–¢–¢–ê–õ–ö–ò–í–ê–ù–ò–Ø
            local direction = (part.Position - Root.Position).Unit
            
            -- –ï–°–õ–ò –ú–Ø–ß –°–õ–ò–®–ö–û–ú –ë–õ–ò–ó–ö–û - –£–°–ò–õ–ò–¢–¨ –£–î–ê–†
            local dist = (part.Position - Root.Position).Magnitude
            local panicMultiplier = (dist < 10) and 1.5 or 1
            
            -- –£–°–¢–ê–ù–û–í–ö–ê –°–ö–û–†–û–°–¢–ò (PHYSICS)
            local force = direction * Config.Power * panicMultiplier
            part.AssemblyLinearVelocity = force + Vector3.new(0, Config.UpForce, 0)
            
            -- –í–†–ê–©–ï–ù–ò–ï (—á—Ç–æ–±—ã —Å–±–∏—Ç—å —Å–∫—Ä–∏–ø—Ç—ã –º—è—á–∞)
            part.AssemblyAngularVelocity = Vector3.new(100, 100, 100)
            
            -- –í–ò–†–¢–£–ê–õ–¨–ù–û–ï –ö–ê–°–ê–ù–ò–ï (–î–ª—è –º—è—á–µ–π, —Ä–∞–±–æ—Ç–∞—é—â–∏—Ö –æ—Ç Touch)
            if part:IsA("BasePart") then
                firetouchinterest(Root, part, 0) -- –ö–∞—Å–∞–Ω–∏–µ
                firetouchinterest(Root, part, 1) -- –û—Ç–ø—É—Å–∫–∞–Ω–∏–µ
            end
            
            -- –≠—Ñ—Ñ–µ–∫—Ç –ø—Ä–∏ —É–¥–∞—Ä–µ
            Visual.Color = Color3.fromRGB(255, 255, 0)
        else
            Visual.Color = Color3.fromRGB(255, 0, 0)
        end
    end
end)

-- –û—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –≤—ã—Ö–æ–¥–µ
game.Close:Connect(function()
    Visual:Destroy()
    ScreenGui:Destroy()
end)

print("üõ°Ô∏è ULTRA DEFENSE LOADED - MAX CHECK ENABLED")
